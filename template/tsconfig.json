{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ],
    "rootDir": "src",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
      "./src/components/**/*"
    ],
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}